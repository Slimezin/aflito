    <script>
        function checkAnswer() {
            const userInput = document.getElementById('answer4').value.trim();
            const correctAnswer = "Félix";  // Resposta correta
            if (userInput.toLowerCase() === correctAnswer.toLowerCase()) {
                window.location.href = "enigma5.html";  // Redireciona para a próxima página
            } else {
                const resultElement = document.getElementById('result4');
                resultElement.textContent = "Resposta incorreta. Tente novamente.";
                resultElement.style.color = "red";
            }
        }
    </script>
