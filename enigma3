  <script>
    function checarResposta() {
      var resposta = document.getElementById("resposta").value.toLowerCase();
      if (resposta === "gato") {  // Exemplo de resposta para a imagem (substitua de acordo com a imagem que usar)
        alert("Parabéns, você resolveu todos os enigmas!");
      } else {
        alert("Resposta errada, tente novamente!");
      }
    }
  </script>
